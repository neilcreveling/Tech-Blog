<section class="text-center">
  <div class="mt-4">
    <h3>{{singlePostData.title}}</h3>
    <p class="m-0">By: {{singlePostData.post_author.username}}</p>
    <p>{{user_id}}</p>
    <p class="m-0">Posted on: {{format_date singlePostData.date_created}}</p>
  </div>
  <div class="row">
    <div class="col-2"></div>
    <div class="text-center mt-3 pt-3 border col-8">
      <p>{{singlePostData.content}}</p>
    </div>
    <div class="col-2"></div>
  </div>
</section>
<section class="text-center mt-4">
  <h3>Comments:</h3>
  {{#each postComments as |comment| }}
  {{!-- {{> comments}} --}}
  <div class="row">
  <div class="col-4"></div>
  <div class="text-center mt-3 pt-3 border col-4">
    <p>From: {{comment_author.username}}</p>
    <p>{{content}}</p>
  </div>
  <div class="col-4"></div>
</div>
  {{/each}}
</section>
{{> post-comment}}